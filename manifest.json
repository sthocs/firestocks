{
  "description": "Follow all your stocks in Firefox with a single click",
  "manifest_version": 2,
  "name": "Firestocks",
  "version": "0.2.1",
  "homepage_url": "https://github.com/sthocs/firestocks",
  "icons": {
    "48": "icons/firestocks.svg",
    "96": "icons/firestocks.svg"
  },

  "applications": {
    "gecko": {
      "id": "{18937a87-736d-4d2f-b716-154408a13777}"
    }
  },

  "permissions": [
      "storage"
  ],

  "browser_action": {
    "default_icon": "icons/firestocks.svg",
    "default_title": "Firestocks",
    "default_popup": "popup/stocks.html"
  },

  "options_ui": {
      "page": "options.html",
      "browser_style": true
  }
}
